    <script>
        let n = 0;
function data(){
  
  fetch("https://type.fit/api/quotes")
  .then(function(response) {
    return response.json();
  })
  .then(function(data) {
    document.getElementById("show_quotes").innerHTML=data[n].text; 
    document.getElementById("author").innerHTML="-"+data[n].author;
    console.log(data[0].text)
  });
  facebook_shear();
};

function next(){
    n+=1;
    return data();
}
function facebook_shear(){
    let myurl = document.URL;
    let src = `<div class="fb-share-button" data-href=${myurl} data-layout="button_count" data-size="small"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Flocalhost%3A800%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Share</a></div>`;
document.getElementById("myurl").innerHTML=src;
}
    </script>
    
